@page
@model PublicAddressBook.Pages.CreateContactModel

@{
    ViewData["Title"] = "CreateContact";
}

<h1>CreateContact</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="contactViewModel.Name" class="control-label"></label>
                <input asp-for="contactViewModel.Name" class="form-control" />
                <span asp-validation-for="contactViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contactViewModel.Address" class="control-label"></label>
                <input asp-for="contactViewModel.Address" class="form-control" />
                <span asp-validation-for="contactViewModel.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contactViewModel.DateOfBirth" class="control-label"></label>
                <input asp-for="contactViewModel.DateOfBirth" class="form-control" />
                <span asp-validation-for="contactViewModel.DateOfBirth" class="text-danger"></span>
            </div>
            <numbers id="PhoneNumbers">
         
            </numbers>
            <input type="button" value="Remove Number" onClick="deleteLast()" />
            <input id="btnAddNumber" type="button" value="Add Number" onclick="addPhoneNumberDiv()" />


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        var phoneSum = 0;
      
        function addPhoneNumberDiv() {
            var number = getNestedItemName("contactViewModel.PhoneNumbers", phoneSum);
            $("#PhoneNumbers").append(" <span class='form-group'><input type='text' name='" + number + "' /><span>");
           
            function getNestedItemName(itemName, itemNumber) {
                return (itemName + "[" + itemNumber + "]");
            }
            phoneSum++;
        }
        function deleteLast() {
            document.getElementById("PhoneNumbers").lastChild.remove()
        }

    </script>
}
